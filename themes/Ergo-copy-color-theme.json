{
	"name": "Ergo-copy",
	"type": "light",
	"colors": {
		"activityBar.background": "#ffffff",
		"activityBar.foreground": "#000000",
		"activityBarBadge.background": "#007acc",
		"activityBarBadge.foreground": "#ffffff",
		"button.background": "#007acc",
		"button.foreground": "#ffffff",
		"button.hoverBackground": "#005a9e",
		"editor.background": "#e8e8e8",
		"editor.foreground": "#222222",
		"editor.lineHighlightBackground": "#f0f0f0",
		"editor.selectionBackground": "#cccccc",
		"editor.selectionForeground": "#111111",
		"editorLineNumber.foreground": "#777777",
		"editorIndentGuide.background1": "#cccccc",
		"editorIndentGuide.activeBackground1": "#111111",
		"editorCursor.foreground": "#000000",
		"editorWhitespace.foreground": "#d3d3d3",
		"editorRuler.foreground": "#d3d3d3",
		"sideBar.background": "#ffffff",
		"sideBar.foreground": "#000000",
		"sideBarTitle.foreground": "#000000",
		"sideBarSectionHeader.background": "#ffffff",
		"sideBarSectionHeader.foreground": "#000000",
		"statusBar.background": "#ffffff",
		"statusBar.foreground": "#000000",
		"statusBar.noFolderBackground": "#ffffff",
		"statusBar.noFolderForeground": "#000000",
		"statusBarItem.hoverBackground": "#e0e0e0",
		"titleBar.activeBackground": "#ffffff",
		"titleBar.activeForeground": "#000000",
		"titleBar.inactiveBackground": "#f0f0f0",
		"titleBar.inactiveForeground": "#000000",
	},
	"tokenColors": [
		{
			"scope": ["comment", "string.quoted.docstring", "comment.block"],
			"settings": {
				"foreground": "#777777"
			}
		},
		{
			"scope": ["string.quoted.single", "string.quoted.double", "string.quoted.triple",],
			"settings": {
				"foreground": "#821f01"
			}
		},
		{
			"scope": [
				"keyword.control", "keyword.function", "keyword.package",
				"storage.type.class", "storage.type.function", 
				"storage.modifier", "storage.type",
			],
			"settings": {
				"foreground": "#88225c",
				"fontStyle": "bold"
			}
		},
		{
			"scope": ["constant.numeric.decimal"],
			"settings": {
				"foreground": "#9c1a00",
			}
		},
		// {
		// 	"scope": "constant",
		// 	"settings": {
		// 		"foreground": "#88225c",
		// 		"fontStyle": "bold"
		// 	}
		// },
		// hightlight python magic methods
		{
			"scope": "support.function.magic.python",
			"settings": {
				"foreground": "#88225c",
				"fontStyle": "bold"
			}
		},
		{
			"scope": [
				"entity.name.function", "entity.name.class",
				"entity.name.type.function", "entity.name.type.class",
				"meta.function-call.generic",
				"variable.language.special",
				"storage.type.string",
				"keyword.other"
			],
			"settings": {
				"foreground": "#213b75",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "entity.other",
			"settings": {
				"foreground": "#3b3b3b",
			}
		},
		{
			"scope": "variable.parameter", // variable.parameter.probably, variable.parameter.function...?
			"settings": {
				"foreground": "#3b3b3b",
			}
		},
		{
			"scope": "variable.parameter.function.language.special",
			"settings": {
				"foreground": "#213b75",
			}
		},
		// python specific
		{
			"scope": "support.type.exception.python",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": [
				"meta.function.decorator.python",
				"entity.name.function.decorator.python"
			],
			"settings": {
				"foreground": "#689b39",
			}
		},
		// javascript specific
		{
			"scope": "support.type.object.module",
			"settings": {
				"foreground": "#ff0000",
			}
		},
		// html specific
		{
			"scope": "entity.name.tag",
			"settings": {
				"foreground": "#213b75",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "entity.other.attribute-name",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": "entity.name.tag.css",
			"settings": {
				"foreground": "#213b75",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "support.type.property-name",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": "support.type.property-name.css",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": "support.type.property-name.sass",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": "support.type.property-name.scss",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": "support.type.property-name.less",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": "support.type.property-name.stylus",
			"settings": {
				"foreground": "#213b75",
			}
		},
		{
			"scope": "support.type.property-name.postcss",
			"settings": {
				"foreground": "#213b75",
			}
		},
		// java specific
		{
			"scope": "meta.declaration.annotation.java",
			"settings": {
				"foreground": "#689b39",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "storage.type.java", // storage.type.generic.java
			"settings": {
				"foreground": "#318dc2",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "storage.modifier.java",
			"settings": {
				"foreground": "#318dc2",
				"fontStyle": "bold"
			}
		},
		// {
		// 	"scope": "meta.class.java",
		// 	"settings": {
		// 		"foreground": "#88225c",
		// 	}
		// },
		// other c-like language specific
		{
			"scope": [
				"storage.type.primitive",
				"storage.type.built-in.primitive",
				"storage.modifier.java", "meta.class.identifier.java",
			],
			"settings": {
				"foreground": "#88225c",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "meta.definition.class.inherited.classes",
			"settings": {
				"foreground": "#5f0839",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "entity.other.inherited-class",
			"settings": {
				"foreground": "#614956",
				"fontStyle": "bold"
			}
		},
		{
			"scope": "storage.type.generic",
			"settings": {
				"foreground": "#228877",
				"fontStyle": "bold"
			}
		}
	]
}